@model E_knjiznica.Models.Author

<h2>➕ Dodaj novog autora</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group">
        <label for="Name">Ime autora</label>
        <input asp-for="Name" class="form-control" placeholder="Unesi ime autora" required />
    </div>

    <div class="form-group">
        <label for="Biography">Biografija</label>
        <textarea asp-for="Biography" class="form-control" placeholder="Kratka biografija"></textarea>
    </div>

    <div class="form-group">
        <label for="OpenLibraryId">Open Library ID (npr. OL2162288A)</label>
        <input asp-for="OpenLibraryId" class="form-control" placeholder="Unesi OpenLibrary ID" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">💾 Spremi autora</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-2">⬅️ Povratak na popis autora</a>
