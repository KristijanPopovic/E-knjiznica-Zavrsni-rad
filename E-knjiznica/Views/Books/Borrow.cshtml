@model E_knjiznica.Models.Book

<h2>📖 Posudi knjigu: @Model.Title</h2>

<form asp-action="Borrow" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label for="days" class="form-label">Na koliko dana želite posuditi knjigu? (maks. 30 dana)</label>
        <input type="number" name="days" class="form-control" min="1" max="30" value="14" required />
    </div>

    <button type="submit" class="btn btn-primary">✅ Potvrdi posudbu</button>
    <a asp-action="Index" class="btn btn-secondary">↩️ Povratak</a>
</form>
