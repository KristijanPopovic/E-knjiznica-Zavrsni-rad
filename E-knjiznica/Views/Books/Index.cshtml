@model IEnumerable<E_knjiznica.Models.Book>

<h2>Popis knjiga</h2>

<table class="table">
    <thead>
        <tr>
            <th>Naslov</th>
            <th>Autor</th>
            <th>Žanr</th>
            <th>Datum izdavanja</th>
            <th>Recenzije</th>
            <th>Status</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@book.PublishedDate.ToShortDateString()</td>
                <td>@book.Review</td>
                <td>@(book.IsBorrowed ? "Posuđena" : "Dostupna")</td>
                <td>
                    @if (!book.IsBorrowed)
                    {
                        <a asp-action="Borrow" asp-route-id="@book.Id" class="btn btn-warning">Posudi</a>
                    }
                    else
                    {
                        <a asp-action="Return" asp-route-id="@book.Id" class="btn btn-success">Vrati</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Dodaj novu knjigu</a>
