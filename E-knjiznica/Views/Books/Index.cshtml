@model IEnumerable<E_knjiznica.Models.Book>

<div class="container mt-4">
    <h2 class="mb-4 text-center">📚 Popis knjiga</h2>

    <!-- 🔍 Pretraga -->
    <form method="get" class="mb-4">
        <div class="row g-2">
            <div class="col-md-3">
                <input type="text" name="searchTitle" class="form-control" placeholder="Pretraži po naslovu" value='@Context.Request.Query["searchTitle"]' />
            </div>
            <div class="col-md-3">
                <input type="text" name="searchAuthor" class="form-control" placeholder="Pretraži po autoru" value='@Context.Request.Query["searchAuthor"]' />
            </div>
            <div class="col-md-3">
                <input type="text" name="searchGenre" class="form-control" placeholder="Pretraži po žanru" value='@Context.Request.Query["searchGenre"]' />
            </div>
            <div class="col-md-2">
                <input type="number" name="searchYear" class="form-control" placeholder="Godina izdavanja" value='@Context.Request.Query["searchYear"]' />
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary w-100">🔎 Traži</button>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover table-striped shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Naslov</th>
                    <th>Naslovnica</th> <!-- ✅ Dodano novo polje za sliku -->
                    <th>Autor</th>
                    <th>Žanr</th>
                    <th>Datum izdavanja</th>
                    <th>Recenzije</th>
                    <th>Status</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>
                            @if (!string.IsNullOrEmpty(book.CoverUrl))
                            {
                                <img src="@book.CoverUrl" alt="Naslovnica" style="width: 60px; height: auto;" /> <!-- ✅ Prikaz slike -->
                            }
                            else
                            {
                                <span class="text-muted">Nema slike</span>
                            }
                        </td>
                        <td>@(book.Author?.Name ?? "Nepoznato")</td>
                        <td>@(book.Genre ?? "Nepoznato")</td>
                        <td>@(string.IsNullOrEmpty(book.PublishedYear) ? "-" : book.PublishedYear)</td>

                        <td>
                            @if (book.Reviews != null && book.Reviews.Any())
                            {
                                <span>@book.Reviews.Average(r => r.Rating) ⭐</span> <br />
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="link-primary">Pogledaj recenzije</a>
                            }
                            else
                            {
                                <span class="text-muted">Nema recenzija</span>
                            }
                        </td>

                        <td>@(book.IsBorrowed == true ? "Posuđeno" : "Dostupno")</td>

                        <td>
                            @if (book.IsBorrowed == false)
                            {
                                <form asp-action="Borrow" asp-route-id="@book.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-warning btn-sm">📖 Posudi</button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Return" asp-route-id="@book.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-success btn-sm">🔄 Vrati</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a asp-action="Create" class="btn btn-success">➕ Dodaj novu knjigu</a>
        <p class="alert alert-info mb-0">ℹ️ Sva posudba knjiga ograničena je na maksimalno 30 dana.</p>
    </div>
</div>
